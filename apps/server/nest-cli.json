{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "tsconfig.build.json",
        "assets": [
            {
                "include": "/plugins/*",
                "outDir": "dist"
            },
            {
                "include": "assets/**/*",
                "outDir": "dist"
            },
            {
                "include": "sdk/**/*",
                "outDir": "dist"
            }
        ],
        "watchAssets": true
    }
}
